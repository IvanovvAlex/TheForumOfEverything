@model IEnumerable<TheForumOfEverything.Models.Categories.CategoryViewModel>


@{
    ViewData["Title"] = "Home Page";
    ViewData["Header Page"] = "all-categories.jpg";
}
<!-- Header -->
<header class="masthead" style="background-image: url('/assets/img/@ViewData["Header Page"]')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>The Forum Of Everything</h1>
                    <span class="subheading">is a high school project developed from Alex Ivanov 12v PGEE Apostol Arnaudov, Ruse.</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div>
        <a id="login-submit" class="w-100 btn btn-lg btn-primary" href="/Posts/">All Categories</a>
    </div>
@foreach(var category in Model)
{
    <div>
        <a id="login-submit" class="w-100 btn btn-lg btn-primary" href="/Categories/Details/@category.Id">@category.Title</a>
    </div>
}
