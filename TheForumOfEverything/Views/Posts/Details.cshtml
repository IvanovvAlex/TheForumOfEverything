@using System.Web
@using Microsoft.AspNetCore.Identity
@using TheForumOfEverything.Data.Models
@model TheForumOfEverything.Models.Posts.PostViewModel
@inject UserManager<ApplicationUser> userManager
@*@model TheForumOfEverything.Models.Categories.CreateCategoryViewModel
*@
@{
    ViewData["Title"] = "Details";
    ViewData["Header Page"] = $"{Model.Category.Title}.jpg";
}

<!-- Page Header-->
<header class="masthead" id="postHeading" style="background-image:url('/assets/img/@ViewData["Header Page"]')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            @if(Model.Title.Length >= 30)
                            {
                                <h1 class="post-title">@Model.Title.Substring(0, 23)...</h1>
                            }
                            else
                            {
                                <h1 class="post-title">@Model.Title</h1>                            
                            }
                            <h2 class="subheading">@Model.Description</h2>
                            <h4>@Model.Category.Title</h4>
                            <span class="meta">
                                Posted by
                                <a href="#!">@Html.DisplayFor(model => model.User.UserName)</a>
                                on @Model.TimeCreated
                            </span>
                                    <a id="login-submit" class="w-100 btn btn-lg btn-primary" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>

                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Post Content-->
         <div class="col-lg-8 col-md-10 mx-auto testing">
                @Html.Raw(HttpUtility.HtmlDecode(Model.Content))
            </div>
        @*<div>
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>*@
        <section>
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4">
                <h1>Comments</h1>
                @foreach(var comment in Model.Comments)
                {
                    <div class="comment mt-4 text-justify float-left"> <img src="https://i.imgur.com/yTFUilP.jpg" alt="" class="rounded-circle" width="40" height="40">
                    <h6>@await userManager.FindByIdAsync(comment.UserId); </h6> <span>- @comment.TimeCreated</span> <br>
                    <p>@comment.Content</p>
                </div>
                }
            </div>
            <div class="col-lg-4 col-md-5 col-sm-4 offset-md-1 offset-sm-1 col-12 mt-4">
                <div class="row">
                    <div class="col-md-12">
                        <form id="algin-form" asp-controller="Comments" asp-action="Create" class="col-md-6 offset-md-3 ">
                            <div class="form-group">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline row justify-content-center">
                                    <h4>Leave a comment</h4>
                                    <textarea type="text" id="Content" name="Content" class="form-control" cols="30" rows="5" placeholder="What's new?"></textarea>
                                    <span class="text-danger"></span>
                                    <input type="hidden" id="PostId" name="PostId" value="@Model.Id" />
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Post" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 