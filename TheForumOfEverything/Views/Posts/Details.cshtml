@using System.Web
@model TheForumOfEverything.Models.Posts.PostViewModel

@{
    ViewData["Title"] = "Details";
    ViewData["Header Page"] = $"{Model.Category.Title}.jpg";
}

<!-- Page Header-->
<header class="masthead" id="postHeading" style="background-image:url('/assets/img/@ViewData["Header Page"]')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            @if(Model.Title.Length >= 30)
                            {
                                <h1 class="post-title">@Model.Title.Substring(0, 23)...</h1>
                            }
                            else
                            {
                                <h1 class="post-title">@Model.Title</h1>                            
                            }
                            <h2 class="subheading">@Model.Description</h2>
                            <h4>@Model.Category.Title</h4>
                            <span class="meta">
                                Posted by
                                <a href="#!">@Html.DisplayFor(model => model.User.UserName)</a>
                                on @Model.TimeCreated
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Post Content-->
         <div class="col-lg-8 col-md-10 mx-auto testing">
                @Html.Raw(HttpUtility.HtmlDecode(Model.Content))
            </div>
        @*<div>
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>*@
        <section>
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4">
                <h1>Comments</h1>
                @foreach(var comment in Model.Comments)
                {
                    <div class="comment mt-4 text-justify float-left"> <img src="https://i.imgur.com/yTFUilP.jpg" alt="" class="rounded-circle" width="40" height="40">
                    <h4>@comment.User.UserName</h4> <span>- @comment.TimeCreated</span> <br>
                    <p>@comment.Content</p>
                </div>
                }
            </div>
            <div class="col-lg-4 col-md-5 col-sm-4 offset-md-1 offset-sm-1 col-12 mt-4">
              
                <form id="algin-form">
                    <div class="form-group">
                        <h4>Leave a comment</h4> <label for="message"></label> <textarea name="msg" id="" msg cols="30" rows="5" class="form-control"></textarea>
                    </div>
                    <div class="form-group"> <button type="button" id="post" class="btn btn-primary">Post Comment</button> </div>
                </form>
            </div>
        </div>
    </div>
</section>
 